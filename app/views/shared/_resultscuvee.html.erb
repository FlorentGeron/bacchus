<div class = "display-results" data-cuvee-index-target = "displayResults">
  <% if cuvees.blank?%>
      Aucune cuvée ne correspond à ces critères
    <%else%>
      <% cuvees.each do |cuvee|%>
          <div class= "cuvee-preview" data-controller = "cuvee-modal">
            <div class="title-card">
              <%= cuvee.domaine%>
            </div>
            <div class= "cuvee-preview-details" data-action= "click->cuvee-modal#openCuveeModal">
              <%= cuvee.cuvee%>
              <%= cuvee.annee.year%>
              <%= cuvee.appellation.nom%>
              <div class="sticker">
                <% if @search_params[:cave].blank? %>
                  <%=cuvee.bouteillesaboire.count%>
                <%else %>
                  <%= @cave.bouteillesaboire.where(cuvee: cuvee).count%>
                <%end%>
              </div>
            </div>
          </div>
      <%end%>
    <%end%>
</div>
